{
  "id": "party-vision",
  "title": "Party Vision",
  "description": "Creates a single party token that uses the individual vision of its members, with follow-the-leader mode, auto-deploy, formation presets, and visual indicators.",
  "version": "2.0.7",
  "authors": [
    {
      "name": "jhutc82",
      "url": "https://github.com/jhutc82/party-vision"
    }
  ],
  "compatibility": {
    "minimum": "13",
    "verified": "13"
  },
  "relationships": {
    "dependencies": [
      {
        "id": "lib-wrapper",
        "type": "module",
        "manifest": "https://github.com/ruipin/fvtt-lib-wrapper/releases/latest/download/module.json",
        "compatibility": {
          "minimum": "1.12.0"
        }
      }
    ]
  },
  "esmodules": [
    "scripts/main.js",
    "scripts/formations.js"
  ],
  "styles": [
    "styles/party-vision.css"
  ],
  "packs": [
    {
      "name": "macros",
      "label": "Party Vision Macros",
      "type": "Macro",
      "path": "packs/macros.db",
      "private": false,
      "system": "none"
    }
  ],
  "url": "https://github.com/jhutc82/party-vision",
  "manifest": "https://raw.githubusercontent.com/jhutc82/party-vision/refs/heads/main/module.json",
  "download": "https://github.com/jhutc82/party-vision/archive/refs/tags/v2.0.7.zip",
  "license": "MIT",
  "readme": "https://github.com/jhutc82/party-vision/blob/main/README.md",
  "bugs": "https://github.com/jhutc82/party-vision/issues",
  "changelog": "https://github.com/jhutc82/party-vision/blob/main/CHANGELOG.md"
}
